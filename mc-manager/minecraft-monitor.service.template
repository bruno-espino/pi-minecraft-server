[Unit]
Description=Minecraft Server Auto-Shutdown Monitor
After=network.target minecraft.service
Wants=minecraft.service

[Service]
Type=simple
User=__USER__
WorkingDirectory=__INSTALL_DIR__/mc-manager
EnvironmentFile=__INSTALL_DIR__/discord-bot/.env
ExecStart=__INSTALL_DIR__/venv/bin/python __INSTALL_DIR__/mc-manager/monitor.py
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target
