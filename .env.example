# Copy this file to .env and add your Discord token

# Discord Bot

# Your Discord bot token (from https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_bot_token_here

# Channel ID where the bot will post shutdown notifications (optional)
# Right-click a channel in Discord and "Copy ID" (enable Developer Mode in settings)
NOTIFICATION_CHANNEL_ID=

# Minecraft Server

# RCON password (auto-generated by installer - you don't need to set this)
RCON_PASSWORD=

# RCON connection settings (defaults should work for most setups)
RCON_HOST=localhost
RCON_PORT=25575

# Minecraft server ports
MINECRAFT_PORT=25565
BEDROCK_PORT=19132

# Auto-Shutdown Monitor

# Minutes of inactivity before auto-shutdown (default: 30)
IDLE_TIMEOUT_MINUTES=30

# How often to check player count in seconds (default: 60)
CHECK_INTERVAL_SECONDS=60

# Path to state file for bot/monitor communication
STATE_FILE=/opt/minecraft/mc-manager/server_state.txt
